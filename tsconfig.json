{
  "compilerOptions": {
    "baseUrl": ".",
    // "paths": {
    //   "~components/*": ["src/components/*"],
    //   "~context/*": ["src/components/context/*"],
    //   "~hooks/*": ["src/lib/hooks/*"],
    //   "~utils/*": ["src/lib/utils/*"],
    //   "~types": ["src/types"]
    // },
    "target": "es2017",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
      "node_modules",
      "lib"
  ]
}